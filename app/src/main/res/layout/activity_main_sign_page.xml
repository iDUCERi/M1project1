<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0b0b0b"
    android:orientation="vertical"
    tools:context=".MainSignPage">

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#97B002"
        android:ems="10"
        android:hint="@string/name"
        android:inputType="text"
        android:textColorHint="#F2F2F2" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#97B002"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="text"
        android:textColorHint="#F2F2F2"
        tools:ignore="TextFields" />

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#97B002"
        android:ems="10"
        android:hint="@string/phone"
        android:inputType="text"
        android:textColorHint="#F2F2F2"
        tools:ignore="TextFields" />

    <EditText
        android:id="@+id/etPasswords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#97B002"
        android:hint="Enter password"
        android:ems="10"
        android:inputType="textPassword"
        android:textColorHint="#F2F2F2"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/validPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#97B002"
        android:hint="Enter the password again"
        android:ems="10"
        android:inputType="textPassword"
        android:textColorHint="#F2F2F2"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/etCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#97B002"
        android:ems="10"
        android:hint="@string/city"
        android:inputType="text"
        android:textColorHint="#F2F2F2" />

    <Spinner
        android:id="@+id/userType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#97B002"
        android:textColorHint="#F2F2F2" />

    <Button
        android:id="@+id/btnSign"
        android:layout_width="250dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:backgroundTint="#97B002"
        android:onClick="SaveToFireBase"
        android:text="@string/sign" />


</LinearLayout>