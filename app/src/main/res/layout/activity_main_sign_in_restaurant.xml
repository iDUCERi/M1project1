<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0b0b0b"
    android:orientation="vertical"
    tools:context=".MainSignPage">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="152dp"
        app:srcCompat="@drawable/fastan" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="352sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#97B002"
        android:ems="10"
        android:hint="Restaurant name"
        android:inputType="text"
        android:textColorHint="#F2F2F2" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="352sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#97B002"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:textColorHint="#F2F2F2"
        tools:ignore="TextFields" />

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="352sp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:backgroundTint="#97B002"
        android:ems="10"
        android:hint="@string/phone"
        android:inputType="text"
        android:textColorHint="#F2F2F2"
        tools:ignore="TextFields" />

    <EditText
        android:id="@+id/etPasswords"
        android:layout_width="352sp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:backgroundTint="#97B002"
        android:hint="Password"
        android:ems="10"
        android:inputType="textPassword"
        android:textColorHint="#F2F2F2"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/validPassword"
        android:layout_width="352sp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:backgroundTint="#97B002"
        android:hint="Verify password"
        android:ems="10"
        android:inputType="textPassword"
        android:textColorHint="#F2F2F2"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="352sp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="*The city name must be in Hebrew"
        android:textSize="10sp"
        android:textColor="#97B002"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/etCity"
        android:layout_width="352sp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:backgroundTint="#97B002"
        android:ems="10"
        android:hint="@string/city"
        android:inputType="text"
        android:textColorHint="#F2F2F2" />

    <!-- Added Spinner for Transport Type -->
    <Spinner
        android:id="@+id/spinnerTransportType"
        android:layout_width="352sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:backgroundTint="#97B002"
        android:entries="@array/transport_types" /> <!-- We'll define this array in strings.xml -->


    <Button
        android:id="@+id/btnSign"
        android:layout_width="352dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#97B002"
        android:onClick="SaveToFireBase"
        android:text="@string/sign" />

</LinearLayout>